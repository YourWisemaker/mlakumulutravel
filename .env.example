# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=mlakumulu_db

# Prisma Database URL (required for Prisma)
# Railway will automatically set this when deployed
DATABASE_URL=postgresql://your_db_username:your_db_password@localhost:5432/mlakumulu_db

# If using Prisma Accelerate
PRISMA_ACCELERATE_URL=your_accelerate_url

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=86400

# OpenRouter AI API
OPENROUTER_API_KEY=your_openrouter_api_key

# Server Configuration
PORT=3000
NODE_ENV=development
